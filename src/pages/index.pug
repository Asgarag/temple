extends layout/layout

block content
	main.main.container
		div.main__inner
			div.owl-carousel.main__owl-carousel
				div.owl-carousel__imgbox
					img.owl-carousel__img(src="images/delete/main_slider_photo_ch.jpg")
					div.owl-carousel__description
						p.
							Обращение настоятеля храма к прихожанам.
							В карусель также можно вынести самые важные новости, статьи, объявления, праздники.
				div.owl-carousel__imgbox
					img.owl-carousel__img(src="images/delete/news-1-ch.jpg")
					div.owl-carousel__description
						p.
							Обращение настоятеля храма к прихожанам.
							В карусель также можно вынести самые важные новости, статьи, объявления, праздники.
				div.owl-carousel__imgbox
					img.owl-carousel__img(src="images/delete/news-2-ch.jpg")
					div.owl-carousel__description
						p.
							Обращение настоятеля храма к прихожанам.
							В карусель также можно вынести самые важные новости, статьи, объявления, праздники.
			article.calendar.main__calendar
				h2.title.title--m.title--line Сегодня
				div.calendar__container
					div.calendar__date
						time.calendar__new-date(datetime="2018-02-01")
							span.calendar__date-day 1
							span.calendar__date-month февраля
						time.calendar__old-date(datetime="2018-01-19")
							span.calendar__date-day 19
							span.calendar__date-month января
							span.calendar__old-date-name ст.ст.
					span.calendar__name-day четверг
					span.calendar__name-week Седмица сплошная
					span.calendar__fasting Поста нет
		div.main__inner
			article.schedule.main__schedule
				h2.title.title--m.title--line Расписание богослужений
				div.schedule__container
					div.schedule__days
						h3.title.title--s.schedule__days-title по будням
						-
							var schedule__weekdays = [
							{times: '07:30', name:'исповедь'},
							{times: '08:00', name:'Литургия'},
							{times: '17:00', name:'вечерняя служба (накануне)'}
							]
						ul.list.schedule__list
						for elem in schedule__weekdays
							div.schedule__list-item
								span.schedule__time #{elem.times}
								span.schedule__name  - #{elem.name}
					div.schedule__days
						h3.title.title--s.schedule__days-title по праздничным и воскресным дням
						-
							var schedule__holidays = [
							{times: '06:30', name:'исповедь'},
							{times: '07:00', name:'Литургия (ранняя)'},
							{times: '08:30', name:'исповедь'},
							{times: '09:00', name:'Литургия (поздняя)'},
							{times: '17:00', name:'вечерняя бдение (накануне)'}
							]
						ul.list.schedule__list
						for elem in schedule__holidays
							div.schedule__list-item
								span.schedule__time #{elem.times}
								span.schedule__name  - #{elem.name}
			article.sacrifice.sacrifice--big.main__sacrifice
				span.sacrifice__preface Дорогие братья и сестры!
				div.sacrifice__text
					p Молитвенно просим Вас внести свою лепту в дело возрождения исторической и духовной святыни - храма в честь святителя Николая чудотворца.
				button.button.button--blue.button--middle.sacrifice__button Пожертвовать
		div.main__inner
			div.quote.main__quote
				svg.quote__icon
					use(xlink:href="images/sprite.svg#icon-quotation-mark")
				span.quote__text Посылаемое все надобно принимать, как от руки Господней: скорбное ли - к терпению, приятное ли - к благодарению.
				span.qoute__author прп. Моисей Оптинский
			div.question.question--big.main__question
				button.button.question__button(type="button") Задать вопрос настоятелю
				svg.question__icon
					use(xlink:href="images/sprite.svg#icon-question")